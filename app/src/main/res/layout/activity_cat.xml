<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CatActivity">

    <TextView
        android:id="@+id/catName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/catName"
        android:textSize="25sp"
        android:layout_margin="15dp"
        android:textColor="@android:color/holo_red_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pirateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="@string/pirateName"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/background_light"/>

        <Button
            android:id="@+id/batmanName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="@string/batmanName"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/background_light"/>

        <Button
            android:id="@+id/vikingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="@string/vikingName"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/background_light"/>
    </LinearLayout>
</LinearLayout>